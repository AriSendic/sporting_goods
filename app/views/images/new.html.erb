<%= form_tag "/products/#{@product.id}/images", method: :post do %>
<div class="form-group">
    <%= label_tag :url, 'Please enter the url:' %>
    <%= text_field_tag :url, '', class: "form-control" %>
  </div>
  
  <div class="btn btn-default">
    <%= submit_tag 'Submit Image!' %>
  </div>
<% end %>