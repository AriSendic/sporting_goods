<%= form_tag url, method: verb do %>
  <div class="form-group">
    <%= label_tag :description, 'Please enter the description:'%>
    <%= text_field_tag :description, @product.description , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :name, 'Please enter the name:' %>
    <%= text_field_tag :name, @product.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price, 'Please enter the price:' %>
    <%= text_field_tag :price, @product.price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier_id, 'Please enter the supplier_id:' %>
    <%= text_field_tag :supplier_id, @product.supplier_id, class: "form-control" %>
  </div>
  <div class="btn btn-default">
    <%= submit_tag 'Submit Changes' %>
  </div>
<% end %>